APPLICATION = cown4_wand

BOARD ?= feather-m0

ifeq (samr21-xpro, $(BOARD))
  CFLAGS += -D"LED_MINUTE_YELLOW=GPIO_PIN(PA,28)"
  CFLAGS += -D"LED_MINUTE_GREEN=GPIO_PIN(PA,13)"
  CFLAGS += -D"LED_MINUTE_BLUE=GPIO_PIN(PA,5)"
  CFLAGS += -D"LED_MINUTE_GRAY=GPIO_PIN(PA,6)"
  CFLAGS += -D"LED_HOUR_BROWN=GPIO_PIN(PA,23)"
  CFLAGS += -D"LED_HOUR_PURPLE=GPIO_PIN(PA,22)"
  CFLAGS += -D"LED_HOUR_RED=GPIO_PIN(PA,19)"
  CFLAGS += -D"LED_HOUR_ORANGE=GPIO_PIN(PA,18)"
  CFLAGS += -D"LED_LIGHT=GPIO_PIN(PA,16)"
  CFLAGS += -D"BTN_TIME=GPIO_PIN(PB,23)"
  CFLAGS += -D"BTN_LIGHT=GPIO_PIN(PB,2)"
endif

# This has to be the absolute path to the RIOT base directory:
RIOTBASE ?= $(CURDIR)/../../RIOT/

DISABLE_MODULE = auto_init core_msg

FEATURES_REQUIRED += periph_adc
FEATURES_REQUIRED += periph_gpio
FEATURES_REQUIRED += periph_gpio_irq
FEATURES_REQUIRED += periph_timer
FEATURES_REQUIRED += periph_rtc
FEATURES_REQUIRED += periph_pm

DEVELHELP ?= 0

include $(RIOTBASE)/Makefile.include
